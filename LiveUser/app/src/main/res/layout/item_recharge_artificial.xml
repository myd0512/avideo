<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晓曦总"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_item_money"
            android:layout_below="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用额度：4万+"
            android:layout_marginTop="5dp"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray2"
        />
    <RelativeLayout
        android:id="@+id/rl_qq"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_qq"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/icon_recharge_qq1"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即联系"
            android:textColor="#538AFF"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray2"
        />
    <RelativeLayout
        android:id="@+id/rl_weixin"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_weixin"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/icon_recharge_weixin1"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即联系"
            android:textColor="#51C300"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
    <View
        android:visibility="gone"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray2"
        />
    <RelativeLayout
        android:visibility="gone"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_alipay"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/icon_recharge_alipay1"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即联系"
            android:textColor="#02A9F0"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            />
    </RelativeLayout>

</LinearLayout>
    <View
        android:layout_below="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray2"
        />
</RelativeLayout>