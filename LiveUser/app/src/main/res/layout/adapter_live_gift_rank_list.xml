<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <FrameLayout
            android:id="@+id/adapter_live_gift_rank_index_lay"
            android:layout_width="60dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/adapter_live_gift_rank_index_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/white"/>
            <ImageView
                android:id="@+id/adapter_live_gift_rank_index_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"/>
        </FrameLayout>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/adapter_live_gift_rank_user_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_toRightOf="@id/adapter_live_gift_rank_index_lay"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_avatar_placeholder"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            app:riv_oval="true"/>
        <TextView
            android:id="@+id/adapter_live_gift_rank_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:text="10000000.00"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/adapter_live_gift_rank_user_iv"
            android:layout_toLeftOf="@id/adapter_live_gift_rank_money_tv"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/adapter_live_gift_rank_user_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14dp"
                android:textColor="@color/white"/>
            <ImageView
                android:id="@+id/adapter_live_gift_rank_level_tv"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="60dp"
        android:background="#EE666666" />
</LinearLayout>