<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_10"
        android:background="@color/white"
        android:paddingStart="@dimen/margin_padding_15"
        android:paddingTop="@dimen/margin_padding_5"
        android:paddingEnd="@dimen/margin_padding_15"
        android:paddingBottom="@dimen/margin_padding_5">

        <TextView
            android:id="@+id/tv_tz_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/rgbDE5245" />

        <ImageView
            android:id="@+id/tv_cash_delete"
            android:layout_width="@dimen/margin_padding_20"
            android:layout_height="@dimen/margin_padding_20"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/icon_rubish_delete"
            android:contentDescription="@null"
            android:padding="@dimen/margin_padding_5" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="@dimen/margin_padding_15"
        android:paddingTop="@dimen/margin_padding_15"
        android:paddingEnd="@dimen/margin_padding_15"
        android:paddingBottom="@dimen/margin_padding_5">

        <TextView
            android:id="@+id/tv_tz_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/rgb262628" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_20"
            android:layout_toEndOf="@+id/tv_tz_name"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tz_inject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_20"
                android:textColor="@color/rgbDE5245"
                android:textSize="@dimen/text_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/tv_bs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/rgbDE5245"
                android:textSize="@dimen/text_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="倍"
                android:textSize="@dimen/text_13" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_double"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/rgbDE5245" />

    </RelativeLayout>

</LinearLayout>