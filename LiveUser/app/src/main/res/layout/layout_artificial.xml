<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:id="@+id/ll_artificial"
android:visibility="gone"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_unionpay_des"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="人工充值是代理服务，如发现代理向您推荐其它平台或骚扰行为，请截图联系客服举报，情况属实奖励5000元"
        android:layout_marginTop="15dp"
        android:textSize="12sp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#509DE2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_recharge_artificial_number"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的充值账号：*******"
            android:textSize="14sp"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_artificial_copy_number"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="31dp"
            android:src="@mipmap/icon_copy"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray2"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_choose_type"
        android:layout_below="@+id/tv_recharge_money_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:overScrollMode="never"
        />
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray2"
        />
    <TextView
        android:id="@+id/dialog_help_tips_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="15"
        android:scrollbars="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:lineSpacingExtra="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="13dp"
        android:textColor="@color/textColor99"
        android:text="@string/recharge_des1"/>
</LinearLayout>