<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="22dp"
        android:layout_height="12dp"
        android:scaleType="fitXY"
        android:src="@mipmap/filter_arrow_up"/>
    <TextView
        android:id="@+id/pop_game_more_recharge_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        android:textSize="13dp"
        android:textColor="@color/textColor0"
        android:text="我要充值"/>

    <TextView
        android:id="@+id/pop_game_more_withdraw_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        android:textSize="13dp"
        android:textColor="@color/textColor0"
        android:text="我要提现"/>

    <TextView
        android:id="@+id/pop_game_more_tz_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        android:textSize="13dp"
        android:textColor="@color/textColor0"
        android:text="投注历史"/>

    <TextView
        android:id="@+id/pop_game_more_kj_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        android:textSize="13dp"
        android:textColor="@color/textColor0"
        android:text="历史开奖"/>

    <TextView
        android:id="@+id/pop_game_more_rule_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        android:textSize="13dp"
        android:textColor="@color/textColor0"
        android:text="玩法规则"/>
</LinearLayout>