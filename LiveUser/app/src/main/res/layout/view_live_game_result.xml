<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="100dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_game_result_point"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/view_live_game_result_name_lay"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@mipmap/ic_live_game_result_bg">
            <ImageView
                android:id="@+id/view_live_game_result_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/view_live_game_result_close_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingRight="14dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_game_close"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/view_live_game_result_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toEndOf="@id/view_live_game_result_iv"
                android:layout_toStartOf="@id/view_live_game_result_close_iv"
                android:layout_centerVertical="true"
                android:textSize="11dp"
                android:textColor="@color/white"/>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/view_live_game_result_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"/>
    </LinearLayout>
</RelativeLayout>