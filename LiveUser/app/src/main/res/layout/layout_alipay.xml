<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:id="@+id/ll_alipay"
    android:visibility="gone"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_unionpay_des"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="请在规定时间内支付，超时支付不到账！！"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#509DE2"
        />

    <TextView
        android:id="@+id/dialog_help_tips_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:lineSpacingExtra="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="@string/recharge_des4"/>
    <TextView
        android:id="@+id/btn_cash_alipay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_gonggao_submit"
        android:gravity="center"
        android:text="立即充值"
        android:textColor="@color/white"
        android:textSize="14sp"
        />
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_tip"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/modify_hint_ico_gray"
            android:tint="@color/color_btn_red"
            />
        <TextView
            android:layout_toRightOf="@+id/iv_tip"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_btn_red"
            android:textSize="12sp"
            android:text="重要提示：支付渠道将不定期进行更换，入款前请查看并确定最新账户再进行汇款。"
            />
    </RelativeLayout>
</LinearLayout>