<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/rgb4C4842"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_padding_50"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_padding_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:text="设置筹码"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18" />

        <ImageView
            android:id="@+id/game_chip_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_game_close"
            android:contentDescription="@null"
            android:padding="@dimen/margin_padding_5" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_padding_1"
        android:background="@color/textColor2" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_padding_20" />

    <Button
        android:id="@+id/game_chip_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_padding_40"
        android:layout_marginLeft="@dimen/margin_padding_20"
        android:layout_marginTop="@dimen/margin_padding_10"
        android:layout_marginRight="@dimen/margin_padding_20"
        android:layout_marginBottom="@dimen/margin_padding_10"
        android:background="@drawable/btn_circle_half"
        android:text="@string/ssdk_game_sure"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16" />
</LinearLayout>