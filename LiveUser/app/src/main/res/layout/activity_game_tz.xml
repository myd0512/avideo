<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/act_game_tz_top_lay"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:paddingTop="19dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">
            <ImageView
                android:id="@+id/btn_back_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="backClick"
                android:padding="9dp"
                android:src="@mipmap/icon_back"
                android:tint="@color/textColor" />

            <TextView
                android:id="@+id/act_game_tz_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:maxEms="10"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/act_game_tz_top_more_lay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="12dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/game_home_ico"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textSize="13dp"
                    android:textColor="@color/textColor0"
                    android:text="更多"/>
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/act_game_tz_magic_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/act_game_tz_top_lay"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/act_game_tz_period_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/act_game_tz_magic_indicator"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:layout_weight="8">
            <TextView
                android:id="@+id/act_game_tz_last_period_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="13dp"
                android:textColor="@color/red"
                android:text="202005200852"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/act_game_tz_last_period_tv"
                android:layout_marginLeft="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="13dp"
                android:textColor="@color/textColor0"
                android:text="期 开奖"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/act_game_tz_last_result_rv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="6dp"
                android:overScrollMode="never"
                android:layout_below="@id/act_game_tz_last_period_tv"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#EFEFEF"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_weight="5">
            <TextView
                android:id="@+id/act_game_tz_latest_period_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="13dp"
                android:textColor="@color/red"
                android:text="202005200852"/>
            <TextView
                android:id="@+id/act_game_tz_latest_period_tips_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/act_game_tz_latest_period_tv"
                android:layout_marginLeft="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="13dp"
                android:textColor="@color/textColor0"
                android:text="期 封盘"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_below="@id/act_game_tz_latest_period_tv"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/act_game_tz_time_1000_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_game_time_out"
                    android:includeFontPadding="false"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="18dp"
                    android:textColor="@color/red"
                    android:text="0"/>
                <TextView
                    android:id="@+id/act_game_tz_time_100_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_game_time_out"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="18dp"
                    android:textColor="@color/red"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="2dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="18dp"
                    android:textColor="@color/textColor0"
                    android:text=":"/>
                <TextView
                    android:id="@+id/act_game_tz_time_10_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_game_time_out"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="2dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="18dp"
                    android:textColor="@color/red"
                    android:text="4"/>
                <TextView
                    android:id="@+id/act_game_tz_time_1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_game_time_out"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="3dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="18dp"
                    android:textColor="@color/red"
                    android:text="0"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EFEFEF"
        android:layout_below="@id/act_game_tz_period_lay"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/act_game_tz_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/act_game_tz_period_lay"
        android:layout_above="@+id/act_game_tz_money_lay"
        android:layout_marginTop="10dp"
        android:overScrollMode="never"/>
    <LinearLayout
        android:id="@+id/act_game_tz_money_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/act_game_tz_edit_lay"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="#EFEFEF"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/textColor0"
            android:text="共"/>
        <TextView
            android:id="@+id/act_game_tz_check_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/red"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/textColor0"
            android:text="注"/>
        <TextView
            android:id="@+id/act_game_tz_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:textColor="@color/red"
            android:text="0.00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/textColor0"
            android:text="元"/>
        <TextView
            android:id="@+id/act_game_tz_yue_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="right"
            android:textSize="14dp"
            android:textColor="@color/textColor2"
            android:text="账户余额：0.00元"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_game_tz_edit_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="6dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/act_game_tz_auto_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/jx_ico"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/textColor0"
                android:text="机选"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#EFEFEF"/>
        <LinearLayout
            android:id="@+id/act_game_tz_reset_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/game_reset_ico"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/textColor0"
                android:text="重置"/>
        </LinearLayout>
        <EditText
            android:id="@+id/act_game_tz_chip_ev"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:inputType="number"
            android:maxLength="5"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/bg_game_input_money"
            android:textSize="16dp"
            android:textColor="@color/textColor0"
            android:hint="请输入金额"/>
        <TextView
            android:id="@+id/act_game_tz_submit_tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_game_input_submit"
            android:layout_marginLeft="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="提交"/>
    </LinearLayout>
</RelativeLayout>