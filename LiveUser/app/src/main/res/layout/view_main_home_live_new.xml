<?xml version="1.0" encoding="utf-8"?>
<com.yinjiee.ausers.custom.RefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/live_main_home_live_refresh_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/live_main_home_live_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/classRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/white"
                android:overScrollMode="never" />

            <com.yinjiee.ausers.views.SlideshowView
                android:id="@+id/slideshowView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <View
                    android:layout_width="3dp"
                    android:layout_height="12dp"
                    android:background="@drawable/bg_home_hot_lv_tips" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="游戏"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:visibility="invisible"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="@color/textColor99"
                    android:text="更多"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:visibility="invisible"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/icon_arrow_right" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/view_main_home_game_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginBottom="5dp"
                android:overScrollMode="never"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <View
                    android:layout_width="3dp"
                    android:layout_height="12dp"
                    android:background="@drawable/bg_home_hot_lv_tips" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="直播"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:visibility="invisible"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="@color/textColor99"
                    android:text="更多"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:visibility="invisible"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/icon_arrow_right" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/live_main_home_live_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</com.yinjiee.ausers.custom.RefreshLayout>