<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_padding_8"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_option_num"
        android:layout_width="@dimen/margin_padding_40"
        android:layout_height="@dimen/margin_padding_40"
        android:background="@drawable/btn_circle_half_8_uncheck"
        android:gravity="center"
        android:textColor="@color/rgbDE5245" />

    <TextView
        android:id="@+id/tv_option_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_2"
        android:layout_gravity="center"
        android:textSize="@dimen/text_12"
        android:textColor="@color/white" />

</LinearLayout>