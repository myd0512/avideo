<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#33333333"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/dialog_user_card_share_content_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/dialog_user_card_share_top_iv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_user_card_share"/>
            <ImageView
                android:id="@+id/dialog_user_card_share_code_iv"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/dialog_user_card_share_code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/textColor0"
                android:text="邀请码 ZXC78"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="14dp"
                android:textColor="@color/textColor0"
                android:text="您的专属铭牌"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:textColor="@color/textColor0"
                android:text="保存铭牌 分享推广两不误"/>

            <TextView
                android:id="@+id/dialog_user_card_share_save_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/bg_gonggao_submit"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="12dp"
                android:includeFontPadding="false"
                android:ems="8"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:text="马上保存"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <ImageView
        android:id="@+id/dialog_user_card_share_close_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_user_card_share_content_lay"
        android:src="@mipmap/icon_live_close"/>
</RelativeLayout>