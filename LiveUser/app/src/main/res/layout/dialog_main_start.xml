<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <com.yunbao.phonelive.custom.DrawableTextView
            android:id="@+id/btn_live"
            android:layout_width="@dimen/margin_padding_60"
            android:layout_height="@dimen/margin_padding_80"
            android:gravity="center_horizontal"
            android:text="@string/main_start_live"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_15"
            android:textStyle="bold"
            app:dt_top_drawable="@mipmap/icon_main_start_live"
            app:dt_top_height="@dimen/margin_padding_60"
            app:dt_top_width="@dimen/margin_padding_60" />

        <com.yunbao.phonelive.custom.DrawableTextView
            android:id="@+id/btn_video"
            android:layout_width="@dimen/margin_padding_60"
            android:layout_height="@dimen/margin_padding_80"
            android:layout_marginLeft="@dimen/margin_padding_80"
            android:gravity="center_horizontal"
            android:text="@string/main_start_video"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_15"
            android:textStyle="bold"
            app:dt_top_drawable="@mipmap/icon_main_start_video"
            app:dt_top_height="@dimen/margin_padding_60"
            app:dt_top_width="@dimen/margin_padding_60" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="@dimen/margin_padding_50"
        android:layout_height="@dimen/margin_padding_50"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_padding_5"
        android:padding="@dimen/margin_padding_15"
        android:src="@mipmap/icon_main_start_close" />
</LinearLayout>