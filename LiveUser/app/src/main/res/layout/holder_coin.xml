<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray2"
    >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"/>
            <!--账户余额-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_coin_head"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:text="@string/coin_balance"
                    android:textColor="@color/textColor2"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/fense"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:overScrollMode="never"
                android:visibility="gone" />

            <LinearLayout
                android:layout_below="@id/btn_votes"
                android:background="#FCF6E0"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_left"
                    android:layout_marginLeft="15dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/zhongzhi13"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:id="@+id/view_live_room_warning_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_left"
                    android:layout_toLeftOf="@+id/iv_right"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textColor="#F1A03F"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="@string/recharge_des3"/>
                <ImageView
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_right"
                    android:layout_marginLeft="20dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/zhongzhi14"
                    />
            </LinearLayout>
            <!--      选择支付方式  -->
            <LinearLayout
                android:id="@+id/ll_choose"
                android:gravity="center_vertical"
                android:layout_below="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    >
                    <RelativeLayout
                        android:id="@+id/rl_recharge_unionpay"
                        android:clickable="true"
                        android:descendantFocusability="blocksDescendants"
                        android:background="@mipmap/icon_recharge_bg"
                        android:layout_centerInParent="true"
                        android:layout_width="90dp"
                        android:layout_height="110dp">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/iv_recharge_unionpay"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@mipmap/icon_unionpay"
                            />
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="银行转账"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_below="@+id/iv_recharge_unionpay"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    >
                    <RelativeLayout
                        android:id="@+id/rl_recharge_artificial"
                        android:clickable="true"
                        android:descendantFocusability="blocksDescendants"
                        android:layout_centerInParent="true"
                        android:layout_width="90dp"
                        android:background="@drawable/bg_recharge_no"
                        android:layout_height="110dp">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/iv_recharge_artificial"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@mipmap/icon_artificial"
                            />
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人工充值"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_below="@+id/iv_recharge_artificial"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout

                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    >
                    <RelativeLayout
                        android:id="@+id/rl_recharge_alipay"
                        android:clickable="true"
                        android:descendantFocusability="blocksDescendants"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_recharge_no"
                        android:layout_width="90dp"
                        android:layout_height="110dp">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/iv_recharge_alipay"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@mipmap/icon_recharge_alipay"
                            />
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付宝支付"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_below="@+id/iv_recharge_alipay"
                            />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    >
                    <RelativeLayout
                        android:id="@+id/rl_recharge_weixin"
                        android:layout_centerInParent="true"
                        android:clickable="true"
                        android:descendantFocusability="blocksDescendants"
                        android:background="@drawable/bg_recharge_no"
                        android:layout_width="90dp"
                        android:layout_height="110dp">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/iv_recharge_weixin"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@mipmap/icon_recharge_weixin"
                            />
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="微信支付"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_below="@+id/iv_recharge_weixin"
                            />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <!--        充值金额-->
            <RelativeLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_below="@+id/ll_choose"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/tv_des"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="充值金额"
                    />
                <TextView
                    android:id="@+id/tv_money_des"
                    android:layout_below="@+id/tv_des"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:text="￥"
                    />
                <EditText
                    android:id="@+id/edit"
                    android:layout_below="@+id/tv_des"
                    android:layout_toRightOf="@+id/tv_money_des"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入充值金额"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="#dcdcdc"
                    android:textSize="24sp"
                    android:layout_marginBottom="20dp"
                    />
                <TextView
                    android:id="@+id/tv_recharge_money_des"
                    android:layout_below="@+id/edit"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可充值区间30.00-1000000.00"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_choose_money"
                    android:layout_below="@+id/tv_recharge_money_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:overScrollMode="never"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>
            <!--                银行转账-->
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray2"
                />
            <include
                layout="@layout/layout_unionpay"
                />
            <!--                人工充值-->
            <include
                layout="@layout/layout_artificial"
                />
            <!--                人工充值-->
            <include
                layout="@layout/layout_alipay"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>