<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/pop_game_tz_chip_empty_lay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#99333333"/>
    <LinearLayout
        android:id="@+id/pop_game_tz_chip_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#88000000"
        android:gravity="bottom"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/pop_game_tz_chip_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pop_game_tz_money_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="#EFEFEF"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/textColor0"
            android:text="共"/>
        <TextView
            android:id="@+id/pop_game_tz_check_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/red"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/textColor0"
            android:text="注"/>
        <TextView
            android:id="@+id/pop_game_tz_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:textColor="@color/red"
            android:text="0.00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/textColor0"
            android:text="元"/>
        <TextView
            android:id="@+id/pop_game_tz_yue_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="right"
            android:textSize="14dp"
            android:textColor="@color/textColor2"
            android:text="账户余额：0.00元"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pop_game_tz_edit_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/pop_game_tz_auto_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/jx_ico"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/textColor0"
                android:text="机选"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#EFEFEF"/>
        <LinearLayout
            android:id="@+id/pop_game_tz_reset_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/game_reset_ico"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/textColor0"
                android:text="重置"/>
        </LinearLayout>
        <EditText
            android:id="@+id/pop_game_tz_chip_ev"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:inputType="number"
            android:maxLength="5"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/bg_game_input_money"
            android:textSize="16dp"
            android:textColor="@color/textColor0"
            android:hint="请输入金额"/>
        <TextView
            android:id="@+id/pop_game_tz_submit_tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_game_input_submit"
            android:layout_marginLeft="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="提交"/>
    </LinearLayout>
</LinearLayout>