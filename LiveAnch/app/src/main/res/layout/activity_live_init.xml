<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_normal_divider"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/title_bar_top"
        android:gravity="right">
        <ImageView
            android:id="@id/top_bar_back_iv"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="@dimen/title_bar_height"
            android:padding="12dp"
            android:src="@mipmap/close_icon"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/act_live_init_game_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/bg_circle_grey"/>
            <TextView
                android:id="@+id/act_live_init_game_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14dp"
                android:textColor="#333333"
                android:text="选择游戏类型" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/act_live_init_thumb_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_change_cover"/>
            <TextView
                android:id="@+id/act_live_init_thumb_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14dp"
                android:textColor="#333333"
                android:text="封面设置" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        style="@style/live_init_item_lay_style">
        <TextView
            style="@style/live_init_item_left_tv_style"
            android:text="直播标题"/>
        <EditText
            android:id="@+id/act_live_init_title_tv"
            style="@style/live_init_item_right_ev_style"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:hint="请设置您的直播标题"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        style="@style/live_init_item_lay_style">
        <TextView
            style="@style/live_init_item_left_tv_style"
            android:text="房间类型"/>
        <TextView
            android:id="@+id/act_live_init_room_type_tv"
            style="@style/live_init_item_right_tv_style"
            android:text="普通房间"/>
        <ImageView
            style="@style/normal_more_right_iv_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        style="@style/live_init_item_lay_style">
        <TextView
            style="@style/live_init_item_left_tv_style"
            android:text="直播线路"/>
        <TextView
            style="@style/live_init_item_right_tv_style"
            android:hint="线路1(默认)"/>
        <ImageView
            style="@style/normal_more_right_iv_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        style="@style/live_init_item_lay_style">
        <TextView
            style="@style/live_init_item_left_tv_style"
            android:text="直播质量"/>
        <TextView
            style="@style/live_init_item_right_tv_style"
            android:hint="标清(默认)"/>
        <ImageView
            style="@style/normal_more_right_iv_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        style="@style/live_init_item_lay_style">
        <TextView
            style="@style/live_init_item_left_tv_style"
            android:text="直播分类"/>
        <TextView
            android:id="@+id/act_live_init_category_tv"
            style="@style/live_init_item_right_tv_style"
            android:hint="未选择"/>
        <ImageView
            style="@style/normal_more_right_iv_style" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/act_live_init_start_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_btn_height"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_live_start"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:text="开始直播"/>
        <TextView
            android:id="@+id/act_live_init_preview_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:text="预览"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:layout_toLeftOf="@id/act_live_init_preview_tv" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textSize="12dp"
        android:textColor="#666666"
        android:text="提示：请关闭手机后台运行的程序，以保证直播流畅"/>
</LinearLayout>