<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.fengtuan.videoanchor.view.DrawableTextView
        android:id="@+id/tv_tz_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_live_chat_item"
        android:drawableStart="@mipmap/photos22"
        android:drawablePadding="@dimen/margin_padding_5"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_padding_5"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/ids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/game_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>

