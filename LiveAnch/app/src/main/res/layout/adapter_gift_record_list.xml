<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/bg_game_gift_record"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="1dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/adapter_gift_record_time_tv"
        style="@style/live_game_gift_record_tv_style"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/adapter_gift_record_user_tv"
        style="@style/live_game_gift_record_tv_style"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/adapter_gift_record_name_tv"
        style="@style/live_game_gift_record_tv_style"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/adapter_gift_record_count_tv"
        style="@style/live_game_gift_record_tv_style"
        android:layout_width="wrap_content"
        android:ems="4"/>
    <TextView
        android:id="@+id/adapter_gift_record_money_tv"
        style="@style/live_game_gift_record_tv_style"
        android:layout_width="wrap_content"
        android:ems="5" />
</LinearLayout>