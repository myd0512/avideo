<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/btn_link_mic"
        android:layout_width="@dimen/margin_padding_50"
        android:layout_height="@dimen/margin_padding_50"
        android:layout_gravity="right"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/margin_padding_10"
        android:layout_marginBottom="@dimen/margin_padding_5"
        android:background="@drawable/bg_live_link_mic"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/margin_padding_30"
            android:layout_height="@dimen/margin_padding_30"
            android:layout_marginTop="@dimen/margin_padding_2"
            android:src="@mipmap/icon_live_link_mic" />

        <TextView
            android:id="@+id/link_mic_tip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/live_link_mic_2"
            android:textColor="@color/gray2"
            android:textSize="@dimen/text_10" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_padding_45">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="@dimen/margin_padding_40"
            android:layout_height="@dimen/margin_padding_40"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/margin_padding_5"
            android:src="@mipmap/icon_live_close" />


        <ImageView
            android:id="@+id/btn_msg"
            android:layout_width="@dimen/margin_padding_40"
            android:layout_height="@dimen/margin_padding_40"
            android:visibility="gone"
            android:layout_toStartOf="@id/btn_share"
            android:padding="@dimen/margin_padding_5"
            android:src="@mipmap/icon_live_msg" />

        <ImageView
            android:id="@+id/btn_red_pack"
            android:layout_width="@dimen/margin_padding_40"
            android:layout_height="@dimen/margin_padding_40"
            android:visibility="gone"
            android:layout_toStartOf="@id/btn_msg"
            android:padding="@dimen/margin_padding_5"
            android:src="@mipmap/icon_live_red_pack" />

        <ImageView
            android:id="@+id/btn_gift"
            android:layout_width="@dimen/margin_padding_40"
            android:layout_height="@dimen/margin_padding_40"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:padding="@dimen/margin_padding_5"
            android:src="@mipmap/ic_live_gift" />

        <ImageView
            android:id="@+id/btn_game"
            android:layout_width="@dimen/margin_padding_40"
            android:layout_height="@dimen/margin_padding_40"
            android:layout_toStartOf="@id/btn_gift"
            android:padding="@dimen/margin_padding_5"
            android:src="@mipmap/ic_live_game" />


        <ImageView
            android:id="@+id/btn_chat"
            android:layout_width="@dimen/margin_padding_40"
            android:layout_height="@dimen/margin_padding_40"
            android:layout_toStartOf="@id/btn_record"
            android:visibility="gone"
            android:padding="@dimen/margin_padding_5"
            android:src="@mipmap/icon_live_chat" />

        <TextView
            android:id="@+id/red_point"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_padding_14"
            android:layout_alignTop="@id/btn_msg"
            android:layout_alignEnd="@id/btn_msg"
            android:layout_marginTop="@dimen/margin_padding_5"
            android:layout_marginEnd="@dimen/margin_padding_5"
            android:background="@drawable/bg_red_point"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="@dimen/margin_padding_14"
            android:paddingLeft="@dimen/margin_padding_3"
            android:paddingRight="@dimen/margin_padding_3"
            android:text="1"
            android:textColor="#fff"
            android:textSize="@dimen/text_10"
            android:translationY="-4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/live_chat_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/margin_padding_5"
            android:ems="6"
            android:background="@drawable/bg_live_chat_tv"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:text="来聊天吧..."/>

        <ImageView
            android:id="@+id/btn_record"
            android:layout_width="@dimen/margin_padding_40"
            android:layout_height="@dimen/margin_padding_40"
            android:layout_toEndOf="@id/live_chat_tv"
            android:padding="@dimen/margin_padding_5"
            android:src="@mipmap/icon_record" />

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="@dimen/margin_padding_40"
            android:layout_height="@dimen/margin_padding_40"
            android:layout_toEndOf="@id/btn_record"
            android:padding="@dimen/margin_padding_5"
            android:src="@mipmap/ic_live_share" />
    </RelativeLayout>

</LinearLayout>