<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/bg_game_gift_record"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="1dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/adapter_game_result_name_tv"
        style="@style/live_game_gift_record_tv_style"
        android:layout_weight="3" />
    <TextView
        android:id="@+id/adapter_game_result_period_tv"
        style="@style/live_game_gift_record_tv_style"
        android:layout_weight="3" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:gravity="center">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/adapter_game_result_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>
    </LinearLayout>
</LinearLayout>