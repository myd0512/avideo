<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include layout="@layout/view_title"/>
    <LinearLayout
        android:id="@+id/btn_avatar"
        style="@style/edit_profile_group"
        android:onClick="editProfileClick">
        <TextView
            style="@style/edit_profile_left_tv_style"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="头像" />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="7dp"
            android:src="@mipmap/default_head"
            android:scaleType="centerCrop"
            app:riv_oval="true" />
    </LinearLayout>

    <LinearLayout
        style="@style/edit_profile_group">
        <TextView
            style="@style/edit_profile_left_tv_style"
            android:text="账号"/>
        <TextView
            android:id="@+id/number"
            style="@style/edit_profile_right_tv_style"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_name"
        style="@style/edit_profile_group"
        android:onClick="editProfileClick">
        <TextView
            style="@style/edit_profile_left_tv_style"
            android:text="@string/edit_profile_nickname"/>
        <TextView
            android:id="@+id/name"
            style="@style/edit_profile_right_tv_style"/>
        <ImageView
            style="@style/normal_more_right_iv_style" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_birthday"
        style="@style/edit_profile_group"
        android:layout_marginTop="10dp"
        android:onClick="editProfileClick">
        <TextView
            style="@style/edit_profile_left_tv_style"
            android:text="@string/edit_profile_birthday" />
        <TextView
            android:id="@+id/birthday"
            style="@style/edit_profile_right_tv_style"/>
        <ImageView
            style="@style/normal_more_right_iv_style" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_sex"
        style="@style/edit_profile_group"
        android:onClick="editProfileClick">
        <TextView
            style="@style/edit_profile_left_tv_style"
            android:text="@string/edit_profile_sex"/>
        <TextView
            android:id="@+id/sex"
            style="@style/edit_profile_right_tv_style"/>
        <ImageView
            style="@style/normal_more_right_iv_style" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_location"
        style="@style/edit_profile_group"
        android:onClick="editProfileClick">
        <TextView
            style="@style/edit_profile_left_tv_style"
            android:text="@string/edit_profile_location"/>
        <TextView
            android:id="@+id/location"
            style="@style/edit_profile_right_tv_style"/>
        <ImageView
            style="@style/normal_more_right_iv_style" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_sign"
        style="@style/edit_profile_group"
        android:onClick="editProfileClick">
        <TextView
            style="@style/edit_profile_left_tv_style"
            android:text="名片"/>
        <TextView
            android:id="@+id/sign"
            style="@style/edit_profile_right_tv_style"/>
        <ImageView
            style="@style/normal_more_right_iv_style" />
    </LinearLayout>

</LinearLayout>